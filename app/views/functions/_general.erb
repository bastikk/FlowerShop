<%
  def get_stars_parts(rating)
    @full = rating.truncate()
    @half = 0
    @empty = 5 - (rating.ceil)

    @rest = rating - @full

    if @rest > 0
      if @rest <= 0.33
        @empty += 1
      elsif @rest <= 0.66
        @half += 1
      else
        @full += 1
      end
    end

    return @full, @half, @empty
  end

  def format_price(price)
    full = price.truncate()
    decimals = ((price - full)*100).truncate
    return full, addZeroToBegin(decimals)
  end

  def addZeroToBegin(number)
    if (number < 10)
      return "0" + number.to_s
    end
    return number
  end

  def formatToDDMMMMYYYY(date)
    day = date.day
    month = date.month
    year = date.year

    return day.to_s + " " + getStringMonth(month) + " " + year.to_s
  end

  def getStringMonth(monthNumber)
    monthNames = Array[
      "Січня", "Лютого",
      "Березня", "Квітня",
      "Травня", "Червня",
      "Липня", "Серпня",
      "Вересня", "Жовтня",
      "Листопада", "Грудня"
    ]

    return monthNames[monthNumber]
  end

  def get_user_review(product, user)
    user.reviews.each do |review|
      if review.product_id == product.id
        return review.rating
      end
    end
    return 0
  end

  def not_rated_by_user(product, user)
    user.reviews.each do |review|
      if review.product_id == product.id
        return false
      end
    end
    return true
  end
%>